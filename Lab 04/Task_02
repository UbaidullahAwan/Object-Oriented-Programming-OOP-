#include <iostream>
#include <string>
using namespace std;

// Base class Person
class Person {
protected:
    string name;
    int age;

public:
    // Function to input person info
    void input_person_info() {
        cout << "Enter Name: ";
        getline(cin, name);
        cout << "Enter Age: ";
        cin >> age;
        cin.ignore(); // clear input buffer
    }

    // Function to display person info
    void display_person_info() {
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
    }
};

// Derived class Student (inherits from Person)
class Student : public Person {
private:
    int student_id;

public:
    // Function to input student info
    void input_student_info() {
        input_person_info(); // call base class input
        cout << "Enter Student ID: ";
        cin >> student_id;
    }

    // Function to display student info
    void display_student_info() {
        display_person_info(); // call base class display
        cout << "Student ID: " << student_id << endl;
    }
};

// Main function
int main() {
    Student s;

    cout << "=== Enter Student Details ===" << endl;
    s.input_student_info();

    cout << "\n=== Student Information ===" << endl;
    s.display_student_info();

    return 0;
}
